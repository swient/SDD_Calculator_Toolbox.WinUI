<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CalculatorToolbox.ScientificCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CalculatorToolbox"
    xmlns:models="using:CalculatorToolbox.Models"
    xmlns:converters="using:CalculatorToolbox.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="OperatorButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
        <Style x:Key="CalculatorButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
        <Style x:Key="EqualsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
        <Style x:Key="MemoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- æ¨™é¡Œåˆ— -->
        <Grid Grid.Row="0" Margin="0,0,0,4">
            <TextBlock x:Name="ScientificTitle" FontSize="20" HorizontalAlignment="Left" Margin="95,9,0,0"/>
            <Button x:Name="HistoryButton"
                    Content="&#xE81C;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"
                    Width="40"
                    Height="40"
                    Command="{Binding ShowHistoryCommand}"/>
        </Grid>

        <!-- è¡¨é”å¼èˆ‡ä¸»é¡¯ç¤ºæ¡† -->
        <StackPanel Grid.Row="1" Margin="2,0,2,0">
            <TextBlock FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,2" Padding="0,0,30,0" TextAlignment="Right"
                       Foreground="#888" Text="{Binding ExpressionDisplay}"/>
            <TextBlock FontSize="46" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,0,0" Padding="0,0,20,0"
                       TextAlignment="Right" Text="{Binding MainDisplay}"/>
        </StackPanel>

        <!-- ç‹€æ…‹åˆ— -->
        <Grid Grid.Row="2" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- ç¬¬ä¸€æŽ’ï¼šAngleModeText -->
            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource MemoryButtonStyle}" Content="{Binding AngleModeText}" Command="{Binding ToggleModeCommand}"/>
            <!-- ç¬¬äºŒæŽ’ï¼šè¨˜æ†¶é«”æŒ‰éˆ• -->
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource MemoryButtonStyle}" Content="MC" Command="{Binding MemoryClearCommand}"/>
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource MemoryButtonStyle}" Content="MR" Command="{Binding MemoryRecallCommand}"/>
            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource MemoryButtonStyle}" Content="MS" Command="{Binding MemoryStoreCommand}"/>
            <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource MemoryButtonStyle}" Content="M+" Command="{Binding MemoryAddCommand}"/>
            <Button Grid.Row="1" Grid.Column="4" Style="{StaticResource MemoryButtonStyle}" Content="M-" Command="{Binding MemorySubtractCommand}"/>
            <!-- ç¬¬ä¸‰æŽ’ï¼šä¸‰è§’å‡½æ•¸æŒ‰éˆ• -->
            <Button Grid.Row="2" Grid.Column="0" x:Name="TrigButton" Style="{StaticResource MemoryButtonStyle}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding TrigButtonText}" VerticalAlignment="Center"/>
                        <FontIcon Glyph="&#xE70D;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Button.Content>
                <Button.Flyout>
                    <Flyout Placement="Bottom">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- ç¬¬ä¸€æŽ’ -->
                            <Button Content="sin" Style="{StaticResource OperatorButtonStyle}" Grid.Row="0" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="sin"/>
                            <Button Content="cos" Style="{StaticResource OperatorButtonStyle}" Grid.Row="0" Grid.Column="1" Command="{Binding FunctionCommand}" CommandParameter="cos"/>
                            <Button Content="tan" Style="{StaticResource OperatorButtonStyle}" Grid.Row="0" Grid.Column="2" Command="{Binding FunctionCommand}" CommandParameter="tan"/>
                            <!-- ç¬¬äºŒæŽ’ -->
                            <Button Content="sec" Style="{StaticResource OperatorButtonStyle}" Grid.Row="1" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="sec"/>
                            <Button Content="csc" Style="{StaticResource OperatorButtonStyle}" Grid.Row="1" Grid.Column="1" Command="{Binding FunctionCommand}" CommandParameter="csc"/>
                            <Button Content="cot" Style="{StaticResource OperatorButtonStyle}" Grid.Row="1" Grid.Column="2" Command="{Binding FunctionCommand}" CommandParameter="cot"/>
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>

        <!-- æŒ‰éˆ•å€ -->
        <Grid Grid.Row="3" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- ç¬¬ä¸€æŽ’ï¼šåŠŸèƒ½ -->
            <Button x:Name="SecondFunctionButton" Style="{StaticResource OperatorButtonStyle}" Content="2nd" Grid.Row="0" Grid.Column="0" Command="{Binding SecondFunctionCommand}"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="Ï€" Grid.Row="0" Grid.Column="1" Command="{Binding FunctionCommand}" CommandParameter="pi"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="e" Grid.Row="0" Grid.Column="2" Command="{Binding FunctionCommand}" CommandParameter="euler"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="C" Grid.Row="0" Grid.Column="3" Command="{Binding ClearCommand}" CommandParameter="clear"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="âŒ«" Grid.Row="0" Grid.Column="4" Command="{Binding ClearCommand}" CommandParameter="backspace"/>
            <!-- ç¬¬äºŒæŽ’ -->
            <Button Style="{StaticResource OperatorButtonStyle}" Content="{Binding SquareButtonText}" Grid.Row="1" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="{Binding SquareButtonParameter}"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="Â¹/ð‘¥" Grid.Row="1" Grid.Column="1" Command="{Binding FunctionCommand}" CommandParameter="reciprocal"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="|x|" Grid.Row="1" Grid.Column="2" Command="{Binding FunctionCommand}" CommandParameter="abs"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="exp" Grid.Row="1" Grid.Column="3" Command="{Binding FunctionCommand}" CommandParameter="exp"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="mod" Grid.Row="1" Grid.Column="4" Command="{Binding OperatorCommand}" CommandParameter="mod"/>
            <!-- ç¬¬ä¸‰æŽ’ -->
            <Button Style="{StaticResource OperatorButtonStyle}" Content="{Binding SqrtButtonText}" Grid.Row="2" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="{Binding SqrtButtonParameter}"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="(" Grid.Row="2" Grid.Column="1" Command="{Binding OperatorCommand}" CommandParameter="leftparen"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content=")" Grid.Row="2" Grid.Column="2" Command="{Binding OperatorCommand}" CommandParameter="rightparen"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="n!" Grid.Row="2" Grid.Column="3" Command="{Binding FunctionCommand}" CommandParameter="factorial"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="Ã·" Grid.Row="2" Grid.Column="4" Command="{Binding OperatorCommand}" CommandParameter="divide"/>
            <!-- ç¬¬å››æŽ’ -->
            <Button Style="{StaticResource OperatorButtonStyle}" Content="{Binding PowerButtonText}" Grid.Row="3" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="{Binding PowerButtonParameter}"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="7" Grid.Row="3" Grid.Column="1" Command="{Binding NumberCommand}" CommandParameter="seven"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="8" Grid.Row="3" Grid.Column="2" Command="{Binding NumberCommand}" CommandParameter="eight"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="9" Grid.Row="3" Grid.Column="3" Command="{Binding NumberCommand}" CommandParameter="nine"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="Ã—" Grid.Row="3" Grid.Column="4" Command="{Binding OperatorCommand}" CommandParameter="multiply"/>
            <!-- ç¬¬äº”æŽ’ -->
            <Button Style="{StaticResource OperatorButtonStyle}" Content="{Binding TenPowerButtonText}" Grid.Row="4" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="{Binding TenPowerButtonParameter}"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="4" Grid.Row="4" Grid.Column="1" Command="{Binding NumberCommand}" CommandParameter="four"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="5" Grid.Row="4" Grid.Column="2" Command="{Binding NumberCommand}" CommandParameter="five"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="6" Grid.Row="4" Grid.Column="3" Command="{Binding NumberCommand}" CommandParameter="six"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="âˆ’" Grid.Row="4" Grid.Column="4" Command="{Binding OperatorCommand}" CommandParameter="subtract"/>
            <!-- ç¬¬å…­æŽ’ -->
            <Button Style="{StaticResource OperatorButtonStyle}" Content="{Binding LogButtonText}" Grid.Row="5" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="{Binding LogButtonParameter}"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="1" Grid.Row="5" Grid.Column="1" Command="{Binding NumberCommand}" CommandParameter="one"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="2" Grid.Row="5" Grid.Column="2" Command="{Binding NumberCommand}" CommandParameter="two"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="3" Grid.Row="5" Grid.Column="3" Command="{Binding NumberCommand}" CommandParameter="three"/>
            <Button Style="{StaticResource OperatorButtonStyle}" Content="+" Grid.Row="5" Grid.Column="4" Command="{Binding OperatorCommand}" CommandParameter="add"/>
            <!-- ç¬¬ä¸ƒæŽ’ -->
            <Button Style="{StaticResource OperatorButtonStyle}" Content="{Binding LnButtonText}" Grid.Row="6" Grid.Column="0" Command="{Binding FunctionCommand}" CommandParameter="{Binding LnButtonParameter}"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="âº/â‚‹" Grid.Row="6" Grid.Column="1" Command="{Binding OperatorCommand}" CommandParameter="negate"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="0" Grid.Row="6" Grid.Column="2" Command="{Binding NumberCommand}" CommandParameter="zero"/>
            <Button Style="{StaticResource CalculatorButtonStyle}" Content="." Grid.Row="6" Grid.Column="3" Command="{Binding NumberCommand}" CommandParameter="decimal"/>
            <Button Style="{StaticResource EqualsButtonStyle}" Content="=" Grid.Row="6" Grid.Column="4" Command="{Binding EqualsCommand}" CommandParameter="equals"/>
        </Grid>

        <!-- æ­·å²è¨˜éŒ„é¢æ¿ -->
        <Border x:Name="HistoryPanel"
                Grid.RowSpan="5"
                Background="{ThemeResource SolidBackgroundFillColorBase}"
                Visibility="{Binding IsHistoryPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                HorizontalAlignment="Right"
                Width="380"
                CornerRadius="8"
                Canvas.ZIndex="1000"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- æ­·å²è¨˜éŒ„æ¨™é¡Œ -->
                <Grid Grid.Row="0" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8,8,0,0">
                    <TextBlock x:Name="HistoryTitleText" FontSize="20" FontWeight="SemiBold"/>
                    <Button x:Name="CloseHistoryButton"
                            Content="&#xE711;"
                            FontFamily="Segoe MDL2 Assets"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            Command="{Binding CloseHistoryCommand}"/>
                </Grid>

                <!-- æ­·å²è¨˜éŒ„åˆ—è¡¨ -->
                <ListView x:Name="HistoryListView"
                          Grid.Row="1"
                          ItemsSource="{Binding HistoryRecords}"
                          SelectionMode="Single"
                          SelectedItem="{Binding SelectedHistoryItem, Mode=TwoWay}"
                          IsItemClickEnabled="False">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:HistoryRecord">
                            <Grid Padding="16,12">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{x:Bind Expression}"
                                           Grid.Row="0"
                                           FontSize="14"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind Result}"
                                           Grid.Row="1"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Margin="0,4,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- æ¸…é™¤æ­·å²è¨˜éŒ„æŒ‰éˆ• -->
                <Button x:Name="ClearHistoryButtonElement"
                        Grid.Row="2"
                        Content="æ¸…é™¤æ­·å²è¨˜éŒ„"
                        HorizontalAlignment="Stretch"
                        Margin="16"
                        Command="{Binding ClearHistoryCommand}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
